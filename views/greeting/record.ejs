<div class="view view-hidden" id="view-record">
    <header class="header-navbar">
        <div class="navbar-body">
            <span class="navbar-title">录音</span>
        </div>
        <div class="btn btn-link pull-left" data-route="return">
            <i class="iconfont icon-angle-left"></i>
        </div>
        <!-- <div class="btn btn-link pull-right">
            <i class="iconfont icon-check"></i>
        </div> -->
    </header>
    <div class="wrapper">
        <section class="play-wrapper container-fluid">
            <div class="text-center controls">
                <div class="record-seconds text-center"><span>0</span>"</div>
                <button class="btn btn-link btn-play">
                    <span class="fa fa-play transition"></span>
                    <span class="fa fa-pause transition"></span>
                </button>
            </div>
            <article class="translation">
                <input class="form-control text-center" name="translation">
            </article>
        </section>
        <section class="record-wrapper container-fluid">
            <div class="row text-center controls">
                <div class="col-xs-4 col-xs-offset-4">
                    <button class="btn btn-record transition">
                        <span class="fa fa-microphone"></span>
                    </button>
                    <div class="tip-record">
                        <span class="transition">点击录音</span>
                        <span class="transition">点击停止</span>
                    </div>
                </div>
                <div class="col-xs-4">
                    <button class="btn btn-link btn-save transition">
                        <span class="fa fa-check"></span>
                    </button>
                </div>
            </div>
        </section>
    </div>
    <div class="modal fade modal-places" data-backdrop="static">
        <div class="modal-dialog"><div class="modal-content">
            <div class="modal-body">
                <div class="text-center places-select">
                    <select class="form-control" name="province">
                        <option value="">省</option>
                    </select>
                    <select class="form-control" name="city">
                        <option value="">市</option>
                    </select>
                    <select class="form-control" name="district">
                        <option value="">区</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer" data-dismiss="modal">
                <button class="btn btn-primary">登 录</button>
            </div>
        </div></div>
    </div>
    <div class="modal fade modal-record" data-backdrop="static">
        <div class="modal-dialog"><div class="modal-content">
            <div class="modal-body">
                <div class="text-center places-select">
                    <select class="form-control" name="province">
                        <option value="">省</option>
                    </select>
                    <select class="form-control" name="city">
                        <option value="">市</option>
                    </select>
                    <select class="form-control" name="district">
                        <option value="">区</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer" data-dismiss="modal">
                <button class="btn btn-primary">登 录</button>
            </div>
        </div></div>
    </div>
</div>
